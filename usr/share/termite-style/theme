#************************************************#

elif [[ $opt == "i" ]] || [[ $opt == "I" ]]; then
echo
echo -e $B"    [$R"P"$B]$G PATH (Local File)"
echo -e $B"    [$R"U"$B]$G URL (Internet File)"
echo
echo -ne $B"    [$R"Choose"$B]$B: "
read opt
if [[ $opt == "p" ]] || [[ $opt == "P" ]]; then
echo
echo -ne $C"    [Enter Path To Color-scheme]: "$Y
read cpath
sed -i '/colors/Q' $TDIR/config
cat $cpath >> $TDIR/config
echo -e $Y"    $APLD"
$REL > /dev/null
echo
elif [[ $opt == "u" ]] || [[ $opt == "U" ]]; then
echo
echo -ne $C"    [Enter Color-scheme URL]: "$Y
read clink
wget -o /tmp/log -O /tmp/color.config $clink
sed -i '/colors/Q' $TDIR/config
cat /tmp/color.config >> $TDIR/config
echo -e $Y"    $APLD"
$REL > /dev/null
echo
else
echo
echo -e $Y"    [!] Wrong Input..."
echo -ne $G"    [*] Try Again..."
sleep 1
clear
$PREFIX/share/termite-style/theme
echo
fi
exit

#************************************************#

